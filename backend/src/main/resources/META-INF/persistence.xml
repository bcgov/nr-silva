<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <!-- Oracle persistence unit - explicitly list all Oracle entities for native image support -->
    <persistence-unit name="oracle" transaction-type="RESOURCE_LOCAL">
        <class>ca.bc.gov.restapi.results.oracle.entity.ClientAcronymEntity</class>
        <class>ca.bc.gov.restapi.results.oracle.entity.CutBlockOpenAdminEntity</class>
        <class>ca.bc.gov.restapi.results.oracle.entity.OpenCategoryCodeEntity</class>
        <class>ca.bc.gov.restapi.results.oracle.entity.OrgUnitEntity</class>
        <class>ca.bc.gov.restapi.results.oracle.entity.ResultsElectronicSubmissionEntity</class>
        <class>ca.bc.gov.restapi.results.oracle.entity.activities.ActivityTreatmentUnitEntity</class>
        <class>ca.bc.gov.restapi.results.oracle.entity.comments.SilvicultureCommentEntity</class>
        <class>ca.bc.gov.restapi.results.oracle.entity.cover.ForestCoverEntity</class>
        <class>ca.bc.gov.restapi.results.oracle.entity.opening.OpeningAttachmentEntity</class>
        <class>ca.bc.gov.restapi.results.oracle.entity.opening.OpeningEntity</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
    </persistence-unit>

    <!-- Postgres persistence unit - explicitly list all Postgres entities for native image support -->
    <persistence-unit name="postgres" transaction-type="RESOURCE_LOCAL">
        <class>ca.bc.gov.restapi.results.postgres.entity.UserOpeningEntity</class>
        <class>ca.bc.gov.restapi.results.postgres.entity.UserRecentOpeningEntity</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
    </persistence-unit>

</persistence>
